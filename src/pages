import React, { useState } from 'react';
import { initialProducts } from '../data/initialData';
import { ProductCategory, Product } from '../types';

const Shop: React.FC = () => {
    const [activeCategory, setActiveCategory] = useState<ProductCategory | 'all'>('all');
    const [selectedProduct, setSelectedProduct] = useState<Product | null>(null);

    const categories: { id: ProductCategory | 'all'; label: string }[] = [
        { id: 'all', label: 'Todo' },
        { id: 'gear', label: 'Equipamiento' },
        { id: 'drinks', label: 'Bebidas' },
        { id: 'snacks', label: 'Snacks' },
        { id: 'utilidades', label: 'Utilidades' },
        { id: 'merch', label: 'Merchandising' }
    ];

    const filteredProducts = activeCategory === 'all'
        ? initialProducts
        : initialProducts.filter(p => p.category === activeCategory);

    const handleOrder = (product: Product) => {
        const message = `Hola! Me gustar√≠a pedir: ${product.name} (Precio: $${product.price.toLocaleString()}). ¬øTienen disponibilidad?`;
        const whatsappUrl = `https://wa.me/543855953934?text=${encodeURIComponent(message)}`;
        window.open(whatsappUrl, '_blank');
    };

    return (
        <div className="min-h-screen bg-slate-50">
            {/* Header: Estetica Premium */}
            <div className="bg-primary-950 text-white pt-32 pb-24 relative overflow-hidden">
                <div className="absolute inset-0 opacity-10">
                    <div className="absolute top-0 right-0 w-1/2 h-full bg-accent-600 blur-[120px] rounded-full"></div>
                </div>
                <div className="max-w-6xl mx-auto px-4 relative z-10 text-center">
                    <span className="text-accent-500 font-bold text-[10px] uppercase tracking-[0.6em] border-y border-accent-600/30 py-2 mb-8 inline-block">Proveedur√≠a de Elite</span>
                    <h1 className="text-5xl sm:text-7xl font-serif tracking-tighter mb-6">Shop Las Moras</h1>
                    <p className="max-w-2xl mx-auto text-white/60 text-lg font-light italic">
                        "Todo lo que necesitas para tu rendimiento y confort, a un clic de distancia."
                    </p>
                </div>
            </div>

            <div className="max-w-6xl mx-auto px-4 py-16">
                {/* Categor√≠as */}
                <div className="flex flex-wrap justify-center gap-4 mb-16">
                    {categories.map((cat) => (
                        <button
                            key={cat.id}
                            onClick={() => setActiveCategory(cat.id)}
                            className={`px-8 py-3 text-[10px] font-black uppercase tracking-[0.2em] transition-all border ${activeCategory === cat.id
                                ? 'bg-primary-950 text-accent-500 border-primary-950 shadow-xl'
                                : 'bg-white text-black/40 border-slate-200 hover:border-accent-600 hover:text-black'
                                }`}
                        >
                            {cat.label}
                        </button>
                    ))}
                </div>

                {/* Grid de Productos */}
                <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                    {filteredProducts.map((product) => (
                        <div key={product.id} className="bg-white border border-slate-100 shadow-sm group hover:shadow-2xl transition-all duration-500 rounded-sm overflow-hidden flex flex-col">
                            <div
                                className="aspect-square bg-slate-100 relative overflow-hidden cursor-pointer"
                                onClick={() => setSelectedProduct(product)}
                            >
                                <img
                                    src={product.imageUrl}
                                    alt={product.name}
                                    className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-[3s]"
                                />
                                {product.featured && (
                                    <span className="absolute top-4 left-4 bg-accent-600 text-black text-[8px] font-black uppercase tracking-widest px-3 py-1 shadow-lg">
                                        Destacado
                                    </span>
                                )}
                                <div className="absolute inset-0 bg-primary-950/20 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                    <span className="text-white text-4xl opacity-80">üîç</span>
                                </div>
                            </div>

                            <div className="p-6 flex-1 flex flex-col">
                                <span className="text-[10px] font-black text-accent-700 uppercase tracking-widest mb-2 block">
                                    {product.category}
                                </span>
                                <h3 className="text-lg font-serif font-bold text-black mb-2 group-hover:text-accent-700 transition-colors">
                                    {product.name}
                                </h3>
                                <p className="text-sm text-black/50 font-light mb-6 flex-1 italic leading-relaxed">
                                    {product.description}
                                </p>
                                <div className="pt-6 border-t border-slate-50 flex items-center justify-between">
                                    <span className="text-2xl font-serif font-bold text-black">
                                        ${product.price.toLocaleString()}
                                    </span>
                                    <button
                                        onClick={() => handleOrder(product)}
                                        className="w-12 h-12 bg-primary-950 text-accent-500 rounded-full flex items-center justify-center hover:bg-accent-600 hover:text-black transition-all shadow-lg text-xl"
                                        title="Pedir por WhatsApp"
                                    >
                                        üõí
                                    </button>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>

                {filteredProducts.length === 0 && (
                    <div className="text-center py-20">
                        <p className="text-slate-400 font-serif italic text-xl">Pr√≥ximamente m√°s productos en esta secci√≥n.</p>
                    </div>
                )}
            </div>

            {/* Lightbox Modal */}
            {selectedProduct && (
                <div
                    className="fixed inset-0 bg-black/95 z-[100] flex items-center justify-center p-4 backdrop-blur-sm"
                    onClick={() => setSelectedProduct(null)}
                >
                    <div
                        className="max-w-5xl w-full bg-white rounded-sm shadow-2xl overflow-hidden"
                        onClick={(e) => e.stopPropagation()}
                    >
                        <div className="grid md:grid-cols-2 gap-0">
                            {/* Imagen */}
                            <div className="aspect-square bg-slate-100 relative overflow-hidden">
                                <img
                                    src={selectedProduct.imageUrl}
                                    alt={selectedProduct.name}
                                    className="w-full h-full object-cover"
                                />
                                {selectedProduct.featured && (
                                    <span className="absolute top-6 left-6 bg-accent-600 text-black text-[10px] font-black uppercase tracking-widest px-4 py-2 shadow-lg">
                                        Destacado
                                    </span>
                                )}
                            </div>

                            {/* Detalles */}
                            <div className="p-10 flex flex-col justify-between">
                                <div>
                                    <span className="text-[10px] font-black text-accent-700 uppercase tracking-widest mb-4 block">
                                        {selectedProduct.category}
                                    </span>
                                    <h2 className="text-4xl font-serif font-bold text-black mb-6">
                                        {selectedProduct.name}
                                    </h2>
                                    <p className="text-lg text-black/60 font-light italic mb-8 leading-relaxed">
                                        {selectedProduct.description}
                                    </p>

                                    <div className="border-t border-slate-100 pt-6 mb-8">
                                        <div className="flex items-baseline gap-3 mb-4">
                                            <span className="text-5xl font-serif font-bold text-black">
                                                ${selectedProduct.price.toLocaleString()}
                                            </span>
                                        </div>
                                        <p className="text-sm text-black/40 uppercase tracking-wider">
                                            Stock disponible: {selectedProduct.stock} unidades
                                        </p>
                                    </div>
                                </div>

                                <div className="space-y-3">
                                    <button
                                        onClick={() => handleOrder(selectedProduct)}
                                        className="w-full py-5 bg-[#25D366] text-white text-sm font-black uppercase tracking-[0.2em] hover:bg-[#128C7E] transition-all shadow-xl flex items-center justify-center gap-3"
                                    >
                                        <span className="text-2xl">üí¨</span>
                                        Pedir por WhatsApp
                                    </button>
                                    <button
                                        onClick={() => setSelectedProduct(null)}
                                        className="w-full py-4 bg-slate-100 text-black/60 text-sm font-black uppercase tracking-[0.2em] hover:bg-slate-200 transition-all"
                                    >
                                        Cerrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Close button */}
                    <button
                        onClick={() => setSelectedProduct(null)}
                        className="absolute top-8 right-8 w-12 h-12 bg-white/10 hover:bg-white/20 text-white rounded-full flex items-center justify-center text-2xl transition-all backdrop-blur-sm"
                    >
                        ‚úï
                    </button>
                </div>
            )}
        </div>
    );
};

export default Shop;
